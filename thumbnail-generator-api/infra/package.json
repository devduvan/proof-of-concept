{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "bootstrap": "cdk bootstrap --profile=sinapsis-$npm_config_env -c env=$npm_config_env",
    "deploy": "cdk deploy *-$npm_config_env --profile=sinapsis-$npm_config_env -c env=$npm_config_env",
    "deployStack": "cdk deploy $npm_config_stack-$npm_config_env --profile=sinapsis-$npm_config_env -e -c env=$npm_config_env",
    "destroy": "cdk destroy *-$npm_config_env --profile=sinapsis-$npm_config_env -c env=$npm_config_env",
    "destroyStack": "cdk destroy $npm_config_stack-$npm_config_env --profile=sinapsis-$npm_config_env -e -c env=$npm_config_env"
  },
  "devDependencies": {
    "aws-cdk": "2.3.0",
    "@types/jest": "^26.0.10",
    "@types/node": "10.17.27",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "aws-cdk-lib": "2.3.0",
    "constructs": "^10.0.0",
    "dotenv": "^10.0.0"
  }
}
